<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="details_frame">
		<widget class="SwatToolbar" id="details_toolbar">
			<widget class="SwatToolLink">
				<property name="title" translatable="yes">Edit</property>
				<property name="link">%s/Edit?id=%s</property>
				<property name="stock_id">edit</property>
			</widget>
			<widget class="SwatToolLink" id="delete_link">
				<property name="title" translatable="yes">Delete</property>
				<property name="link">%s/Delete?id=%s</property>
				<property name="stock_id">delete</property>
			</widget>
		</widget>
		<!-- {{{ Details -->

		<widget class="SwatDetailsView" id="details_view">
			<object class="SwatDetailsViewField">
				<property name="title" translatable="yes">Title</property>
				<object class="SwatNullTextCellRenderer">
					<property name="text" type="data">title</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="createdate">
				<property name="title" translatable="yes">Created On</property>
				<object class="SwatDateCellRenderer">
					<property name="date" type="data">createdate</property>
				</object>
			</object>
		</widget>

		<!-- }}} -->
		<!-- {{{ Questions -->

		<widget class="SwatFrame">
			<property name="title" translatable="yes">Questions</property>
			<widget class="SwatForm">
				<widget class="SwatToolbar" id="question_toolbar">
					<widget class="SwatToolLink">
						<property name="title" translatable="yes">Add Question</property>
						<property name="link">%s/QuestionEdit?inquisition=%s</property>
						<property name="stock_id">add</property>
					</widget>
					<widget class="SwatToolLink" id="question_order">
						<property name="title" translatable="yes">Change Question Order</property>
						<property name="link">%s/QuestionOrder?inquisition=%s</property>
						<property name="stock_id">change-order</property>
					</widget>
				</widget>
				<widget class="SwatTableView" id="question_option_view">
					<object class="SwatTableViewGroup" id="question">
						<property name="title" translatable="yes">Question</property>
						<property name="group_by">question</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">bodytext</property>
						</object>
						<object class="AdminGroupLinkCellRenderer">
							<property name="text">Edit Question</property>
							<property name="link">%s/QuestionEdit?id=%s</property>
							<property name="link_value[]" type="data">component</property>
							<property name="link_value[]" type="data">question</property>
						</object>
						<object class="AdminGroupLinkCellRenderer">
							<property name="text">Delete Question</property>
							<property name="link">%s/QuestionDelete?id=%s</property>
							<property name="link_value[]" type="data">component</property>
							<property name="link_value[]" type="data">question</property>
						</object>
						<object class="AdminGroupLinkCellRenderer">
							<property name="text">Change Option Order</property>
							<property name="link">%s/QuestionOptionOrder?question=%s</property>
							<property name="link_value[]" type="data">component</property>
							<property name="link_value[]" type="data">question</property>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="option_index">
						<object class="SwatTextCellRenderer">
							<property name="classes[]">inquisition-option-index</property>
							<property name="text">%s.</property>
							<property name="value" type="data">option_index</property>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="option_title">
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">title</property>
						</object>
					</object>
				</widget>
			</widget>
		</widget>

		<!-- }}} -->
	</widget>
</swatml>
