<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatFrame" id="edit_frame">
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatMessageDisplay" id="message_display" />
			<widget class="SwatFormField" id="bodytext_field">
				<property name="title" translatable="yes">Question</property>
				<widget class="SwatTextareaEditor" id="bodytext">
					<property name="rows" type="integer">5</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="options_field">
				<property name="title" translatable="yes">Question Options</property>
				<property name="display_messages" type="boolean">false</property>
				<widget class="SwatTableView" id="table_view">
					<object class="SwatTableViewColumn" id="title">
						<object class="SwatWidgetCellRenderer" id="title_widget">
							<property name="replicator_id" type="data">id</property>
							<widget class="SwatTextarea" id="title_entry">
								<property name="rows" type="integer">2</property>
								<property name="value" type="data">title</property>
								<property name="resizeable" type="boolean">false</property>
								<property name="maxlength" type="integer">255</property>
								<property name="required" type="boolean">true</property>
							</widget>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatTextarea">
								<property name="rows" type="integer">2</property>
								<property name="resizeable" type="boolean">false</property>
								<property name="required" type="boolean">true</property>
								<property name="maxlength" type="integer">255</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="maximum">
						<property name="visible" type="boolean">false</property>
						<property name="title" translatable="yes">Maximum Value</property>
						<object class="SwatWidgetCellRenderer" id="maximum_widget">
							<property name="replicator_id" type="data">id</property>
							<widget class="SwatIntegerEntry" id="maximum_entry">
								<property name="value" type="data">maximum</property>
								<property name="size" type="integer">2</property>
							</widget>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatIntegerEntry">
								<property name="size" type="integer">2</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewCheckboxColumn" id="checkbox_column">
						<property name="title" translatable="yes">Remove</property>
						<property name="show_check_all" type="boolean">false</property>
						<object class="SwatCheckboxCellRenderer">
							<property name="value" type="data">id</property>
						</object>
						<object class="SwatRemoveInputCell" />
					</object>
					<object class="SwatTableViewInputRow" id="input_row">
						<property name="number" type="integer">2</property>
					</object>
				</widget>
			</widget>
			<widget class="SwatFormField" id="point_total_field">
				<property name="title" translatable="yes">Values Must Add Up To</property>
				<property name="note" translatable="yes">Optional</property>
				<property name="visible" type="boolean">false</property>
				<widget class="SwatIntegerEntry" id="point_total" />
			</widget>
			<widget class="SwatFormField" id="other_field">
				<property name="title" translatable="yes">Show “Other” Entry?</property>
				<property name="visible" type="boolean">false</property>
				<widget class="SwatCheckbox" id="other" />
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title" translatable="yes">Add Question</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
